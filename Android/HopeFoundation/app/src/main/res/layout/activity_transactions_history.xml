<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="c4c.hopefoundation.TransactionsHistoryActivity"
    android:background="@color/primary_lighter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transactions.toolbar"
            android:background="@color/primary_dark">

        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_dark"
            android:text="Transaction History"
            android:textColor="@color/icons"
            android:layout_gravity="center"
            android:gravity="top|center_horizontal"
            android:paddingTop="20dp"
            android:textSize="22sp"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
<!--        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ongoing Transactions"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@color/primary"
                    android:textColor="@color/icons"
                    android:padding="3dp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>-->
<!--        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_margin="2dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            >-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_margin="7dp">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/transactions.list">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
 <!--       </android.support.v7.widget.CardView>-->
    </LinearLayout>
    <com.melnykov.fab.FloatingActionButton
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="right"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_mail_outline_white_18dp"
        android:padding="15dp"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="@color/primary_dark"
        fab:fab_colorRipple="@color/primary"
        android:id="@+id/transaction.history.download"/>
</FrameLayout>
