<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#eee">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/request.item.status"
            android:background="@color/md_green_600"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="3dp"
                android:background="#eee">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Location}"
                        android:textSize="17sp"
                        android:paddingLeft="10sp"
                        android:layout_margin="3dp"
                        android:textColor="@color/primary_dark"
                        android:id="@+id/request.item.location"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Category > AssetType}"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:textColor="@color/secondary_text"
                            android:textStyle="italic"
                            android:id="@+id/request.item.breadcrumb"
                            />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{0}"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:textColor="@color/primary_text"
                            android:id="@+id/request.item.requested.count"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Request Count"
                            android:textSize="8sp"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:textColor="@color/secondary_text"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/primary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="{0}"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/icons"
            android:id="@+id/request.item.count"/>
    </android.support.v7.widget.CardView>
</FrameLayout>